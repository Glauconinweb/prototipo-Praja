generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  nome      String
  email     String   @unique
  senha     String
  role      Role     @default(client)
  createdAt DateTime @default(now())
}

model Shop {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  nome      String
  descricao String?
  createdAt DateTime @default(now())
}

enum Role {
  client
  shop
  admin
}
